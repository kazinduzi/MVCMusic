@model MVCMusic.ViewModels.CustMovieViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-striped movies-list">
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    @foreach(var Movie in Model.Movies)
    {
        <tr>
            <td>@Html.ActionLink(@Movie.Name, "Detail", "Movies", new { Id = @Movie.Id }, null)</td>
            <td>@Movie.Genre</td>
        </tr>
    }
</table>

@Html.ActionLink("Add new Movie", "New", "Movies", null, new { @class = "btn btn-success" })

<h3>Customers</h3>
<ul>
    @foreach(var customer in Model.Customers)
    {
        <li>
            @Html.ActionLink(@customer.Name, "Detail", "Customers", new { Id = @customer.ID }, null)
        </li>
    }
</ul>


