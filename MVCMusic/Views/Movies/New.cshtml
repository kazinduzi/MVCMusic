@model MVCMusic.ViewModels.MovieViewModel

@{
    ViewBag.Title = "New Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("SaveMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", data_attr = "Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.TextBoxFor(m => m.Movie.Genre, new { @class = "form-control", placeholder = "Comedy" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleasedDate)
        @Html.TextBoxFor(m => m.Movie.ReleasedDate, new { @class = "form-control", placeholder = "Y-m-d H:i:s" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Duration)
        @Html.TextBoxFor(m => m.Movie.Duration, new { @class = "form-control", placeholder = "Number of minutes" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieCustomerId)
        @Html.DropDownListFor(m => m.Movie.MovieCustomerId, new SelectList(Model.Customers, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Save</button>
}