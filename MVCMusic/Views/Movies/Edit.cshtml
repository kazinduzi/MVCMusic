@model MVCMusic.ViewModels.MovieViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("SaveMovie", "Movies"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MovieModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Movie.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Movie.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.Name, "", new { @class = "text-danger" })            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Duration, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Movie.Duration, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.Duration, "", new { @class = "text-danger" })            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.ReleasedDate, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Movie.ReleasedDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.ReleasedDate, "", new { @class = "text-danger" })            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Genre, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Movie.Genre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.Genre, "", new { @class = "text-danger" })            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Created, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Movie.Created, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.Created, "", new { @class = "text-danger" })           
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Movie.MovieCustomerId, "MovieCustomerId", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Movie.MovieCustomerId, new SelectList(Model.Customers, "Id", "Name", Model.Movie.MovieCustomerId), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.MovieCustomerId, "", new { @class = "text-danger" })            
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />  
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
