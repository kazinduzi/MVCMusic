@model MVCMusic.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CustomerModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Customer.ID)

        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.Customer.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Customer.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.CustomerId, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.Customer.CustomerId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Customer.CustomerId, "", new { @class = "text-danger" })            
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Country, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.Customer.Country, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Customer.Country, "", new { @class = "text-danger" })           
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />   
            @Html.ActionLink("Back to List", "Index", "Customers", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
